{{page-title "UserRegister"}}

<br><br>
    <div class="reg">
    <form {{action "user_register" on="submit" }}>
      <h1>User Register</h1>
      <div class="formcontainer">
            <hr/>
            <div class="container">
                <label for="fname"><strong>First Name</strong></label><br>
                <input type="text" placeholder="Enter first name" name="fname" id="fname" required><br><br>
                <label for="lname"><strong>Last Name</strong></label><br>
                <input type="text" placeholder="Enter last name" name="lname" id="lname" required><br><br>
                <label for="email"><strong>Mail</strong></label><br>
                <input type="email" placeholder="Enter email" name="email" id="email" required><br><br>
                <label for="ph"><strong>Phone</strong></label><br>
                <input type="text" placeholder="Enter Phone" name="ph" id="ph" required><br><br>
                <label for="gender"><strong>Gender</strong></label><br>
                <input type="radio" name="gender" value="Male" id="male" required/>Male
                <input type="radio" name="gender" value="Female" id="female" />Female<br><br>        
                <label for="psw"><strong>Password</strong></label><br>
                <input type="password" placeholder="Enter Password" name="pwd" id="password" required><br><br>
                <label for="cnfm_psw"><strong>Confirm Password</strong></label><br>
                <input type="password" placeholder="Confirm Password" name="cnfm_pwd" id="confirm_password" required><br>
            </div>
        </div>

        <script type="text/javascript">
            var password = document.getElementById("password")
        , confirm_password = document.getElementById("confirm_password");

        function validatePassword(){
        if(password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
            confirm_password.setCustomValidity('');
        }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
        </script>
        
      <button type="submit">Register</button>
      <br>
              <center><a href="#" onclick="javascript:window.history.back(-1);return false;">Back</a></center>
      <div class="container" style="background-color: #eee">
        <label style="padding-left: 15px"></label>
      </div>
    </form>
    </div>

